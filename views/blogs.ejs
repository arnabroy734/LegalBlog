<%- include('header'); %>

    <body>


        <section id="blogs">
            <div class="container">


                <div class="row bg-white sticky-top">
                    <!-- Brand Logo Here -->
                    <div class="col-lg-2">
                        <a class="navbar-brand d-inline-block" href="/">
                            <img src="/static/images/nav-logo.png" alt="" width="64" height="64">
                        </a>
                    </div>

                    <!-- Nav Links Here -->
                    <div class="col-lg-10">
                        <div class="container pt-3 pb-2">
                            <ul class="nav nav-tabs blog-nav" id="blogNav">
                                <li class="nav-item me-2">
                                    <a class="nav-link active" aria-current="page" href="#" id="nav_all">All</a>
                                </li>
                                <li class="nav-item me-2">
                                    <a class="nav-link" href="#" id="nav_recent">Recent</a>
                                </li>
                                <li class="nav-item me-2">
                                    <a class="nav-link" href="#" id="nav_popular">Popular</a>
                                </li>
                                <li class="nav-item dropdown me-2">
                                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                                        aria-expanded="false">Previous Year Question</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item active exam-menu" id="all_exams">All Exams</a></li>

                                        <% previousExams.forEach(function(exam){ %>
                                            <% if (exam.exam !="noexam" ){ %>
                                                <li><a class="dropdown-item exam-menu" href="#" id="<%=exam.id%>">
                                                        <%=exam.exam%>
                                                    </a></li>
                                                <% } %>

                                                    <% }); %>

                                    </ul>
                                </li>

                                <!-- Editor Options to Access Saved Drafts -->
                                <% if (editor){ %>
                                    <li class="nav-item me-2">
                                        <a class="nav-link" href="#" id="nav_drafts">Drafts</a>
                                    </li>
                                    <% } %>
                                        <div class="d-flex ms-auto mt-1 blog-search dropdown blog-input-small">
                                            <input class="form-control dropdown-toggle position-relative"
                                                 type="text" data-bs-toggle="dropdown" placeholder="Search Question"
                                                aria-label="Search">
                                            <ul class="dropdown-menu w-100">
                                                
                                                <!-- List will be populated via js from search result -->

                                            </ul>
                                            <!-- <button class="btn btn-primary" type="submit">Search</button> -->
                                        </div>

                            </ul>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-2">
                        <div class="container p-0">
                            <!-- List of Subjects Here -->
                            <ul class="list-group list-group-flush mt-3 subjectlist" id="subjectList">
                                <li class="list-group-item list-group-item-action py-3 active" id="all_sub">All Subjects
                                </li>
                                <% subjects.forEach(function(subject, index){ %>
                                    <% if (index==0){ %>
                                        <li class="list-group-item list-group-item-action py-3" id="<%=subject.id%>">
                                            <%=subject.subject%>
                                        </li>
                                        <% } else { %>
                                            <li class="list-group-item list-group-item-action py-3"
                                                id="<%=subject.id%>">
                                                <%=subject.subject%>
                                            </li>
                                            <% } %>
                                                <% }); %>
                            </ul>
                        </div>
                    </div>

                    <div class="col-lg-10">
                        <!-- List of Blogs Here -->
                        <div class="container mt-3 blog-list" id="blog-list">

                            <!-- This part will be populated by Javascript -->

                        </div>
                    </div>
                </div>
            </div>
            </div>


        </section>


        <!-- Bootstrap 5 Integration -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
        <script src="/static/blog.js"></script>

        <!-- Snackbar Code Integration -->
        <link rel="stylesheet" href="/snackbar/snackbar.css">
        <div id="snackbar">Some text some message..</div>
    </body>

    </html>